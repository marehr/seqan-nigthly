set (SEQAN_CTEST_ROOT_DIRECTORY "CONFIGURE ME")  # Ex: "/home/takifugu2/holtgrew/Nightly/linux64"

if (NOT "$ENV{SEQAN_CMAKE_FIND_ROOT_PATH}x" STREQUAL "x")
